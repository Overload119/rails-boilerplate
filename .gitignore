# =====================================
# Ruby / Rails
# =====================================

# Ignore bundler config
/.bundle

# Ignore all logfiles and tempfiles
/log/*
!/log/.keep
/tmp/*
!/tmp/.keep

# Ignore pidfiles, but keep the directory
/tmp/pids/*
!/tmp/pids/.keep

# Ignore storage (Active Storage, SQLite, cache)
/storage/*
!/storage/.keep

# Ignore master key for decrypting credentials and more
/config/master.key

# Ignore byebug/debug history
.byebug_history
.irb_history
.pry_history

# Ignore precompiled assets
/public/assets

# =====================================
# Node / Bun / JavaScript
# =====================================

# Dependencies
/node_modules

# Build outputs
/app/assets/builds/*
!/app/assets/builds/.keep

# NPM/Yarn/Bun debug logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*
bun-debug.log*

# TypeScript build info
*.tsbuildinfo

# Vite (if accidentally created)
/public/vite*

# Tailwind output
/app/assets/builds/*.css
!/app/assets/builds/.keep

# =====================================
# Environment Variables
# =====================================

# Environment files
.env
.env.local
.env.development.local
.env.test.local
.env.production.local
.env*.local

